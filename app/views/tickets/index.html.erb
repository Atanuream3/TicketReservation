<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table class='.table-bordered'>
  <thead>
    <tr>
      <th>Ticket type</th>
      <th>Total seats</th>
      <th>Available seats</th>
      <th>Reserved seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.ticket_type %></td>
        <td><%= ticket.total_seats %></td>
        <td><%= ticket.available_seats %></td>
        <td><%= ticket.reserved_seats %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

